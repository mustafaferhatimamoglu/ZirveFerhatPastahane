sql_mayali +=gelen;
sql_mayali +="' GROUP BY IT.ITEMCODE,IT.ITEMNAME,STL.UNITCODE";
    var sql_cevap_mayali = Islemler.DB_op.Instance.selectToTiger_DT(sql_mayali);
